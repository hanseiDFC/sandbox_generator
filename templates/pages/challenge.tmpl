{{define "content"}}

<div class="mb-4 rounded-lg shadow" id="challContainer">

  <h2 class="text-2xl font-bold mb-2">{{.Name}}</h2>
  <p class="mb-2">Image: {{.Image}}</p>
  <div id="challCentent">
    <div hx-get="/{{.Id}}/new" hx-target="#challCentent" class="flex">
      <button class=" bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create Instance</button>
      <img class="htmx-indicator" src="assets/spinner.png" width="40" height="28">
    </div>

    <p class="text-gray-600 text-sm mt-4">
      {{.Message}}
    </p>
  </div>
</div>

{{end}}